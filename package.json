{
    "name": "markdown-reader",
    "version": "1.0.0",
    "description": "精致优雅的 Markdown 阅读器和编辑器",
    "main": "electron/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux"
    },
    "build": {
        "appId": "com.markdownreader.app",
        "productName": "Markdown Reader",
        "directories": {
            "output": "dist"
        },
        "files": [
            "index.html",
            "styles/**/*",
            "js/**/*",
            "electron/**/*"
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "electron/icons/icon.ico"
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "electron/icons/icon.png"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "electron/icons"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "keywords": [
        "markdown",
        "reader",
        "editor",
        "viewer"
    ],
    "author": {
        "name": "Markdown Reader",
        "email": "noreply@markdownreader.app"
    },
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    }
}